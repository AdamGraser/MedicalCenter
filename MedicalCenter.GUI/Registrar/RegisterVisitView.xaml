<UserControl x:Class="MedicalCenter.GUI.Registrar.RegisterVisitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="521" d:DesignWidth="781" MinHeight="521" MinWidth="781" Height="521" Width="781" MaxHeight="521" MaxWidth="781">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="51*" />
                <ColumnDefinition Width="49*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Zarejestruj wizytę" Background="CornflowerBlue" FontFamily="Segoe UI Light" FontSize="32" Foreground="White" Padding="15,0,0,0" Margin="0,10,0,30" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="AddPatient" Content="Dodaj pacjenta" Padding="20,0,20,0" Margin="0,10,9,0" Width="auto" Height="43" VerticalAlignment="Top" Background="CornflowerBlue" BorderThickness="0" FontFamily="Tahoma" FontSize="16" Foreground="White" />
                <Button Name="Back" Content="Powrót" Padding="46,0,46,0" Margin="0,10,11,0" Width="auto" Height="43" VerticalAlignment="Top" Background="CornflowerBlue" BorderThickness="0" FontFamily="Tahoma" FontSize="16" Foreground="White" IsCancel="True" Click="Back_Click" />
            </StackPanel>
        </Grid>
        
        <DataGrid Grid.Row="1" Name="DoctorsListTable" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="True"
                  ScrollViewer.CanContentScroll="True" Margin="10,0,10,15" VerticalGridLinesBrush="CornflowerBlue" HorizontalGridLinesBrush="White" Background="White">
            
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="CornflowerBlue" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0,0,0,8" />
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=/DoctorsList/ClinicName}" Width="4*">
                    <DataGridTextColumn.HeaderTemplate>
                        <ItemContainerTemplate>
                            <StackPanel Margin="15,0,15,0">
                                <Label Content="Poradnia" FontFamily="Segoe UI Light" FontSize="24" Foreground="White" HorizontalContentAlignment="Center" />
                                <ComboBox Name="FilterClinicName" ItemsSource="{Binding Path=/ClinicsList/Values}" Style="{DynamicResource MedicalCenterComboBox}" Width="auto" />
                            </StackPanel>
                        </ItemContainerTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>

                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=/DoctorsList/DoctorName}" Width="5*">
                    <DataGridTextColumn.HeaderTemplate>
                        <ItemContainerTemplate>
                            <StackPanel Margin="15,0,15,0">
                                <Label Content="Lekarz" FontFamily="Segoe UI Light" FontSize="24" Foreground="White" HorizontalContentAlignment="Center" />
                                <TextBox Name="FilterDoctorName" Foreground="CornflowerBlue" CaretBrush="CornflowerBlue" BorderThickness="0" Height="21" Width="auto" />
                            </StackPanel>
                        </ItemContainerTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>

                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=/DoctorsList/PatientsNumber}" Width="3*">
                    <DataGridTextColumn.HeaderTemplate>
                        <ItemContainerTemplate>
                            <TextBlock Text="Liczba pacjentów" FontFamily="Segoe UI Light" FontSize="24" Foreground="White" TextWrapping="Wrap" Block.TextAlignment="Center" />
                        </ItemContainerTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>

                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=/DoctorsList/RoomNumber}" Width="3*">
                    <DataGridTextColumn.HeaderTemplate>
                        <ItemContainerTemplate>
                            <Label Content="Nr gabinetu" FontFamily="Segoe UI Light" FontSize="24" Foreground="White" HorizontalContentAlignment="Center" />
                        </ItemContainerTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Name="ClosestFreeDate" Content="Najbl. termin" Padding="12,0,12,0" Width="auto" Height="40" HorizontalAlignment="Center" Background="CornflowerBlue" BorderThickness="0" FontFamily="Tahoma" FontSize="16" Foreground="White" IsEnabled="False" Style="{Binding Source={StaticResource MedicalCenterButton}}" />
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Label Content="Data" FontFamily="Segoe UI Light" FontSize="26" Foreground="CornflowerBlue" VerticalAlignment="Center" Margin="0,0,8,0" />
                <DatePicker Name="TheDate" Width="210" Height="36" Margin="0,2,0,0" BorderBrush="CornflowerBlue" BorderThickness="1" VerticalContentAlignment="Center" FontSize="20" Foreground="CornflowerBlue" />
            </StackPanel>
            
            <Button Grid.Column="2" Name="Next" Content="Dalej" Padding="26,0,27,0" Width="auto" Height="40" HorizontalAlignment="Center" Background="CornflowerBlue" BorderThickness="0" FontFamily="Tahoma" FontSize="16" Foreground="White" IsEnabled="False" Style="{Binding Source={StaticResource MedicalCenterButton}}" />
        </Grid>
    </Grid>
</UserControl>
